parameters:
    level: 0
    paths:
        - ../../Source
        - ../../Bin
        - ../../tests
    
    # Use raw error format for easier parsing
    errorFormat: raw
    
    # Stubs for missing dependencies
    stubFiles:
        - stubs.php
    
    # Bootstrap constants only
    bootstrapFiles:
        - ../../constants.php

services:
    # Only enable NoEmptyOnStringsRule from sanmai/phpstan-rules
    -
        class: Sanmai\PHPStanRules\Rules\NoEmptyOnStringsRule
        tags:
            - phpstan.rules.rule