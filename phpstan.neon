parameters:
    level: 0
    paths:
        - Source
        - Bin
        - tests
    
    # Exclude vendor directory to prevent Hoa conflicts
    excludePaths:
        - vendor/*
    
    # Don't scan vendor directories
    scanDirectories: []
    
    # Use comprehensive stubs for all dependencies
    stubFiles:
        - stubs/hoa-stubs.php
    
    # Bootstrap constants only  
    bootstrapFiles:
        - constants.php

services:
    # Only enable NoEmptyOnStringsRule from sanmai/phpstan-rules
    -
        class: Sanmai\PHPStanRules\Rules\NoEmptyOnStringsRule
        tags:
            - phpstan.rules.rule