parameters:
    level: 0
    paths:
        - Source
        - Bin
        - tests
    
    # Use stubs for Hoa dependencies
    stubFiles:
        - stubs/hoa-stubs.php
    
    # Bootstrap constants
    bootstrapFiles:
        - constants.php

services:
    # Only enable empty-related rules from sanmai/phpstan-rules
    -
        class: Sanmai\PHPStanRules\Rules\NoEmptyRule
        tags:
            - phpstan.rules.rule
    -
        class: Sanmai\PHPStanRules\Rules\NoEmptyOnStringsRule
        tags:
            - phpstan.rules.rule
    -
        class: Sanmai\PHPStanRules\Rules\NoCountZeroComparisonRule
        tags:
            - phpstan.rules.rule